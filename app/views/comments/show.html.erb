<table class="table">
  <thead>
    <tr>
      <th>Id</th> 
      <th>Project</th>
      <th>Issued by</th>
      <th>Title</th>
      <th>Description</th>
      <th colspan="5"></th>
    </tr>
  </thead>

  <tbody>
    <tr>
      <td><%= @comment.id %></td>
      <td><%= @comment.project.reference %></td>
      <td><%= @comment.user.username %></td>
      <td><%= @comment.title %></td>
      <td><%= @comment.body %></td>
    </tr>
  </tbody>
</table>

<% unless @replies.empty? %>
  <table class="table">
    <thead>
      <tr>
        <th>Iteration</th> 
        <th>Issued by</th>
        <th>Remark</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @replies.each_with_index do |reply, index| %>
        <tr>
          <td><%= index + 1 %></td>
          <td><%= reply.user.username %></td>
          <td><%= reply.body %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>

<%= link_to 'New Reply', new_reply_path(comment: @comment) %> |
<%= link_to 'Edit', edit_comment_path(@comment) %> |
<%= link_to 'Back', comments_path %>