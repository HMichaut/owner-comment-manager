<%= simple_form_for(@category) do |f| %>
<%= f.error_notification %>
<%= f.object.errors.full_messages.join(", ") if f.object.errors.any? %>
<div class="field">
  <div class="control">
    <div><%= f.input :reference, label: "Category Reference", input_html: { class: "text" }, wrapper: false, label_html: {class: "label"}, placeholder: "Reference", autofocus: true %></div><br>
    <div><%= f.input :name, label: "Category Name", input_html: { class: "text" }, wrapper: false, label_html: {class: "label"}, placeholder: "Name", autofocus: false %></div><br>
  </div>
</div>
<%= f.button :submit, class: "button is-info" %>
<% end %>
