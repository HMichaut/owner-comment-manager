<table class="table">
  <thead>
    <tr>
      <th>Id</th> 
      <th>Reference</th>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= link_to category.id, category %></td>
        <td><%= category.reference %></td>
        <td><%= category.name %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New Category', new_category_path(category: @category) %>