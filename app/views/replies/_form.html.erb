<%= simple_form_for(@reply) do |f| %>
<%= f.error_notification %>
<%= f.object.errors.full_messages.join(", ") if f.object.errors.any? %>
<div class="field">
  <div class="control">
    <div><%= f.input :body, label: "Remark", input_html: { class: "text" }, wrapper: false, label_html: {class: "label"}, placeholder: "Remark", autofocus: false %></div>
    <div><%= f.input :image, label: "Attachment", input_html: { class: "file" }, wrapper: false, label_html: {class: "label"}, autofocus: false %></div>
    <%= f.hidden_field :user_id, value: current_user.id %>
    <%= f.hidden_field :comment_id, value: @comment.id %>
  </div>
</div>
<%= f.button :submit, class: "button is-info" %>
<% end %>
