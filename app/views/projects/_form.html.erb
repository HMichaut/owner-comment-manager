<%= simple_form_for(@project) do |f| %>
<%= f.error_notification %>
<%= f.object.errors.full_messages.join(", ") if f.object.errors.any? %>
<div class="field">
  <div class="control">
    <div><%= f.input :reference, label: "Project Reference", input_html: { class: "text" }, wrapper: false, label_html: {class: "label"}, placeholder: "Project Reference", autofocus: true %></div><br>
  </div>
</div>
<%= f.button :submit, class: "button is-info" %>
<% end %>
