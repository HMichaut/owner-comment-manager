<table class="table">
  <thead>
    <tr>
      <th>Id</th> 
      <th>Reference</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <tr>
      <td><%= @project.id %></td>
      <td><%= @project.reference %></td>
    </tr>
  </tbody>
</table>

<% unless @users.empty? %>
  <table class="table">
    <thead>
      <tr>
        <th>Id</th> 
        <th>User</th> 
        <th colspan="2"></th>
      </tr>
    </thead>

    <tbody>
      <% @users.each_with_index do |user, index| %>
        <tr>
          <td><%= index + 1 %></td>
          <td><%= user.username %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>

<%= link_to 'New Project attribution', new_project_relation_path(project: @project) %> |
<%= link_to 'Edit', edit_project_path(@project) %> |
<%= link_to 'Back', projects_path %>