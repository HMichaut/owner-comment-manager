<table class="table">
  <thead>
    <tr>
      <th>Id</th> 
      <th>Project</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @project_relations.each do |project_relation| %>
      <tr>
        <td><%= link_to project_relation.id, project_relation %></td>
        <td><%= project_relation.project.reference %></td>
        <td><%= project_relation.user.username %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New Project Attribution', new_project_relation_path(project_relation: @project_relation) %>