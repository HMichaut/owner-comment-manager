<%= simple_form_for(@vessel) do |f| %>
<%= f.error_notification %>
<%= f.object.errors.full_messages.join(", ") if f.object.errors.any? %>
<div class="field">
  <div class="control">
    <div><%= f.input :project_id, label: "Project", input_html: { class: "select" }, collection: @project_options, wrapper: false, label_html: {class: "label"}, placeholder: "Project", autofocus: false %></div><br>
    <div><%= f.input :hull_number, label: "Hull Number", input_html: { class: "text" }, wrapper: false, label_html: {class: "label"}, placeholder: "Hull Number", autofocus: true %></div><br>
  </div>
</div>
<%= f.button :submit, class: "button is-info" %>
<% end %>
